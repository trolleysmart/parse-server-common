{
  "name": "trolley-smart-parse-server-common",
  "version": "1.0.0-alpha.44",
  "description": "Trolley Smart Parse Server Common",
  "main": "./dist/index.js",
  "scripts": {
    "start": "babel-node src/index.js",
    "build": "babel src --out-dir dist",
    "lint": "eslint --ext .jsx --ext .js src",
    "fixlint": "eslint --fix --ext .jsx --ext .js src",
    "test": "jest",
    "test:watch": "jest --watch",
    "publish-package": "npm run build && npm publish",
    "flow": "flow",
    "precommit": "lint-staged && npm run fixlint"
  },
  "author": "Micro Business ltd<micro.business.ltd@gmail.com>",
  "homepage": "https://bitbucket.org/microbusiness/trolley-smart-parse-server-common#readme",
  "dependencies": {
    "bluebird": "^3.5.1",
    "immutable": "^4.0.0-rc.9",
    "micro-business-common-javascript": "^1.0.0-alpha.15",
    "micro-business-parse-server-common": "1.0.2-alpha.38"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.0.2",
    "babel-jest": "^21.2.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-stage-0": "^6.24.1",
    "chance": "^1.0.12",
    "eslint": "^4.11.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "6.0.2",
    "eslint-plugin-react": "^7.4.0",
    "flow-bin": "^0.59.0",
    "husky": "^0.14.3",
    "jest": "^21.2.1",
    "lint-staged": "^5.0.0",
    "parse": "^1.10.2",
    "prettier": "^1.8.2",
    "uuid": "^3.1.0"
  },
  "jest": {
    "rootDir": "./src"
  },
  "pre-commit": "lint:staged",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@bitbucket.org:microbusiness/trolley-smart-parse-server-common.git"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json,css}": [
      "prettier --write --single-quote true --trailing-comma all --print-width 150",
      "git add"
    ]
  }
}
